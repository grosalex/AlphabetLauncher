<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="@dimen/shortcut_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/small_x_spacing"
    app:cardCornerRadius="@dimen/small_x_spacing">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/small_spacing">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/shortcut_icon_size"
            android:layout_height="@dimen/shortcut_icon_size"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_spacing"
            android:textColor="@android:color/black"
            android:textSize="@dimen/shortcut_text_size"
            tools:text="Facebook" />
    </LinearLayout>
</android.support.v7.widget.CardView>